<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.week7_classwork_gui_assignment.PrimaryController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <ImageView fx:id="ImgView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
      <HBox alignment="CENTER" prefHeight="66.0" prefWidth="283.0">
         <children>
            <Button fx:id="showImg1Btn" mnemonicParsing="false" onAction="#showImg1Btn" text="Show 1" />
            <Button fx:id="showImg2Btn" mnemonicParsing="false" onAction="#showImg2Btn" text="Show 2" />
            <Label fx:id="countLabel" text="0">
               <padding>
                  <Insets left="5.0" right="5.0" />
               </padding>
            </Label>
            <Button fx:id="rotateBtn" mnemonicParsing="false" onAction="#rotateBtnAction" text="Rotate" />
         </children>
         <VBox.margin>
            <Insets left="5.0" right="5.0" />
         </VBox.margin>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </HBox>
   </children>
</VBox>
